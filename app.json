{
  "expo": {
    "name": "Saylani Stall Manager",
    "slug": "saylani-stall-manager",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "saylanistallmanager",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "icon": "./assets/images/splashicon.jpg",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "We need access to your camera for better experience.",
        "NSLocationWhenInUseUsageDescription": "We need access to your location for better experience."
      },
      "bundleIdentifier": "com.ahmedshahid786.saylanistallmanager"
    },
    "android": {
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.ahmedshahid786.saylanistallmanager",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/splashicon.jpg",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/splashicon.jpg"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splashicon.jpg",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Monsterrat.ttf",
            "./assets/fonts/Montserrat-Bold.ttf",
            "./assets/fonts/Poppins.ttf"
          ]
        }
      ],
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "6f5c2791-090a-4fbd-b0a6-4a10a1755d7a"
      }
    }
  }
}
